<?xml version="1.0"?>
<package format="2">
	<name>cob_openni2_tracker</name>
	<version>0.1.0</version>
	<description>
		The openni_tracker broadcasts the OpenNI skeleton frames using tf.
		This new version of the openni_tracker uses OpenNI2 and Nite2</description>
	<maintainer email="richard.bormann@ipa.fraunhofer.de">Richard Bormann</maintainer>
	
	<license>BSD</license>
	<url type="website">http://www.ros.org/wiki/openni_tracker</url>	
	<author email="marcus.liebhardt@yujinrobot.com">Marcus Liebhardt</author> 
	<author>Olha Meyer</author>

	<buildtool_depend>catkin</buildtool_depend>

	<depend>cmake_modules</depend>
	<depend>libusb-1.0-dev</depend>
	<!--	<depend>libopenni-nite-dev</depend> -->
	<!--	<depend>libopenni-sensor-primesense-dev</depend> -->
	<depend>geometry_msgs</depend>
	<depend>sensor_msgs</depend>
	<depend>orocos_kdl</depend>
	<depend>roscpp</depend>
	<depend>roslib</depend>
	<depend>visualization_msgs</depend>
	<depend>tf</depend>
	<depend>cob_perception_msgs</depend> 
	<depend>libopenni2-dev</depend>
	<depend>libnite2</depend>
	<depend>nodelet</depend>
	<depend>pcl_ros</depend>
	<depend>image_transport</depend>
	<depend>cv_bridge</depend>
	<depend>std_msgs</depend>
	
	<depend>libopencv-dev</depend>
	<depend>glut</depend>
	<depend>opengl</depend>

	<!-- <run_depend>libopenni-nite-dev</run_depend> -->
	<exec_depend>libopenni-sensor-primesense-dev</exec_depend>
	<exec_depend>message_runtime</exec_depend>	
	<exec_depend>boost</exec_depend>
	
	<export>
		<nodelet plugin="${prefix}/nodelet.xml" />	
	</export>
	
</package>
